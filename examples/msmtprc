# account for sending mail
account default
 host smtp.gmail.com
 port 587
 auth on
 user user @gmail.com
 auto_from off
 from user @gmail.com
 maildomain gmail.com
 tls on
 tls_starttls on
 tls_trust_file /opt/local/share/curl/curl-ca-bundle.crt
 logfile -

# set default account
account default : default

